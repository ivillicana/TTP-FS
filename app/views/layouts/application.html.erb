<!DOCTYPE html>
<html>
  <head>
    <title>TTPFs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <% flash.each do |name, msg| %>
        <div class="alert notice">
          <p><%= msg %></p>
        </div>
    <% end %>

    <%= yield %>
  </body>
</html>
