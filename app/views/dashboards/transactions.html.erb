<div class="container">
  <div class="wrapper transactions">
      <div class="header">
        <h1>Transactions</h1>
      </div>

      <div class="list-header"></div>

      <div class="transactions-list">
          <div class="transaction-item list-header">
            <div>Stock</div>
            <div>Quantity</div>
            <div>Price per Share</div>
          </div>

          <% @transactions.each do |t| %>
            <div class="transaction-item">
              <div class="transaction-stock-name">
                BUY (<%= t.company.ticker_symbol %>)
              </div>
              <div class="transaction-stock-quantity">
                <%= pluralize(t.shares_quantity, 'share') %> 
              </div>
              <div class="transaction-stock-price">
                <%= number_to_currency(t.price_per_share) %>
              </div>
            </div>
          <% end %>
        </div>
  </div>
</div>
